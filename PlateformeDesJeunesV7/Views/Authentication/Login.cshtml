</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            if (@ViewData["ClientPublicSucess"]== "1") {
                alertify.success('Candidat ajoutée avec succée.');
            }
            
        });

    </script>
    <script src="~/js/cercles.js"></script>
}
